@model MvcCv.Models.Entity.TblAdmin
@{
    ViewBag.Title = "AdminDüzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Admin Şifre Güncelle</h2>
<br />
<form method="post">
    @Html.Label("Kullanıcı ID")
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
    <br />
    @Html.Label("Kullanıcı Adı")
    @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
    <br />
    @Html.Label("Şifre")
    @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
    <br />
    <button class="btn btn-warning"> Güncelle </button>
</form>

