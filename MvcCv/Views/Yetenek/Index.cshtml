@using MvcCv.Models.Entity;
@model List<TblYeteneklerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{ string renk = ""; }

<h2>Yetenek Listesi</h2>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <a href="/Yetenek/YeniYetenek/" class="btn btn-info"> Yeni Yetenek Ekle</a>
                        <br />
                        <br />
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th style="width: 10px">Id</th>
                                    <th>Yetenek</th>
                                    <th>Derece</th>
                                    <th style="width: 40px">Oran</th>
                                    <th style="width: 150px">Düzenle </th>
                                    <th style="width: 100px">Sil </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    if (item.Oran >= 0 && item.Oran <= 50)
                                    {
                                        renk = "progress-bar bg-danger";
                                    }
                                    if (item.Oran >= 51 && item.Oran <= 70)
                                    {
                                        renk = "progress-bar bg-warning";
                                    }
                                    if (item.Oran >= 71 && item.Oran <= 84)
                                    {
                                        renk = "progress-bar bg-primary";
                                    }
                                    if (item.Oran >= 85 && item.Oran <= 100)
                                    {
                                        renk = "progress-bar bg-success";
                                    }
                                    <tr>
                                        <td>@item.ID</td>
                                        <td>@item.Yetenek</td>
                                        <td>
                                            <div class="progress progress-xs">
                                                <div class="@renk" style="width: @item.Oran% "></div>
                                            </div>
                                        </td>
                                        <td><span class="@renk">@item.Oran</span></td>
                                        <td>
                                            <a class="btn btn-info btn-sm" href="/Yetenek/YetenekDuzenle/@item.ID"><i class=" fas fa-pencil-alt"></i> Düzenle</a>
                                        </td>
                                        <td>
                                            <a class="btn btn-danger btn-sm" href="/Yetenek/YetenekSil/@item.ID"><i class=" fas fa-trash"></i> Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer clearfix">
                        <ul class="pagination pagination-sm m-0 float-right">
                            <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                        </ul>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
</section>